{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./",
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "target": "es6",
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,

    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
